<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.activity.VolunteerActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/red_tool_bar"
        android:gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/mkank_name"
            android:backgroundTint="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/total2"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:id="@+id/infoVol"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="شــروط التطوع" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#B9A636"
        android:layout_height="3dp">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/top_L"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/voluName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="مرحبا :"
            android:textColor="#645C5C"
            android:textSize="15dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txtCon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:lineSpacingMultiplier="1"
        android:maxLines="2"
        android:padding="15dp"
        android:text="المبادرة الوطنية لمكافحة فيروس كورونا كوفيد 19 في دولة السودان"
        android:textColor="@color/color"
        android:textSize="23sp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="7">

        <TextView
            android:id="@+id/txtSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="5dp"
            android:lineSpacingMultiplier="1.5"
            android:text=""
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:textColor="#645C5C"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_gravity="right"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:background="@drawable/attach"
            android:backgroundTint="@color/total1"
            android:layout_marginLeft="50dp"
            android:onClick="onClick" />
        <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/pdfView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_message"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:textColor="#645C5C"
            android:text=" رفع السيرة الذاتية" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:weightSum="2">

        <CheckBox
            android:id="@+id/txtAprove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="اوافق على الشروط والاحكام :"
            android:textSize="15dp">

        </CheckBox>
    </LinearLayout>

    <Button
        android:id="@+id/confirm"
        android:layout_width="196dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/redbtn"
        android:text="اوافق"
        android:textColor="@color/cardview_light_background">

    </Button>
</LinearLayout>