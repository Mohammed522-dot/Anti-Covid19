<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context=".ui.activity.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layoutDirection="rtl"
        android:orientation="vertical">


        <!--    <FrameLayout-->
        <!--        android:id="@+id/frame1"-->
        <!--        android:layout_width="348dp"-->
        <!--        android:layout_gravity="center"-->
        <!--        android:layout_height="264dp"-->
        <!--        tools:ignore="MissingConstraints">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/logo" />

            <EditText
                android:id="@+id/f_name"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:hint="الاسم الاول "
                android:inputType="textPersonName"
                android:paddingRight="20dp"
                android:textColor="#4D4646"
                android:textAlignment="textStart"
                android:textColorHint="#4D4646" />

            <EditText
                android:id="@+id/s_name"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:textColor="#4D4646"
                android:hint="الاسم الثاني "
                android:inputType="textPersonName"
                android:paddingRight="20dp"
                android:textAlignment="textStart"
                android:textColorHint="#4D4646" />

            <EditText
                android:id="@+id/l_name"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:hint="الاسم الثالث"
                android:textColor="#4D4646"
                android:inputType="textPersonName"
                android:paddingRight="20dp"
                android:textAlignment="textStart"
                android:textColorHint="#4D4646" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:textColor="#4D4646"
                android:hint="رقم الهاتف"
                android:inputType="number"
                android:paddingRight="20dp"
                android:textAlignment="textStart"
                android:textColorHint="#4D4646" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/card_shape"
                android:gravity="center|center_vertical"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/type_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="15sp"
                    android:text="النوع" />

                <RadioGroup
                    android:id="@+id/gender_radiogroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkedButton="@id/female"
                    android:orientation="horizontal"
                    android:textAlignment="center"
                    android:textColorHint="#4D4646">

                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="انثى" />

                    <RadioButton
                        android:id="@+id/male"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ذكر" />
                </RadioGroup>
            </LinearLayout>

            <EditText
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_edittext"
                android:hint="العمر"
                android:textColor="#4D4646"
                android:textColorHint="#4D4646"
                android:inputType="number"
                android:paddingRight="20dp"
                android:textAlignment="textStart" />
        </LinearLayout>
        <!--    </FrameLayout>-->
        <Button
            android:id="@+id/don_register"
            android:layout_width="186dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/redbtn"
            android:text="@string/next"
            android:textColor="@color/cardview_light_background"
            />

    </LinearLayout>
</ScrollView>