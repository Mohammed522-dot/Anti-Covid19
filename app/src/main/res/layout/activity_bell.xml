<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.SendNotifActivity">

    <EditText
        android:id="@+id/disc_status"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/card_shape"
        android:gravity="right"
        android:inputType="text"
        android:textAlignment="center"
        android:ems="10"
        android:hint="   وصف الحالة"
        android:textColorHint="@color/cardview_dark_background"
        />

    <EditText
        android:id="@+id/area_Edit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/card_shape"
        android:textAlignment="center"
        android:inputType="text"
        android:hint="المنطقة">
    </EditText>
    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/cardview_dark_background"
        android:text="او ارسل موقعك الحالى"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <ImageView
        android:id="@+id/location_image"
        android:background="@drawable/ic_place_black_24dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ImageView>

    <Button
        android:id="@+id/send_notification"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/card_button"
        android:text="اوافق"
        android:textColor="@color/cardview_light_background">

    </Button>

</LinearLayout>